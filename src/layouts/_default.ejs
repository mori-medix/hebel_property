const items = document.querySelectorAll('.js-detail-recommendation-item-height-even');
const itemsHeightList = [];
const itemsHeightList02 = [];
const maxHeightList = [];
const heightEvenFunc = (device)=>{
  if(device === 'sp'){
    [...items].map((item,i) => {
    itemsHeightList[i] = [];
    [...item.children].map((child,j) => {
      itemsHeightList02[j] = [];
      itemHeight = {};
      itemHeight['index'] = j;
      itemHeight['height'] = child.offsetHeight;
      itemsHeightList[i].push(itemHeight);
    });
  });


  itemsHeightList.map((item,i) => {
    item.map((child) => {
      itemsHeightList02[child.index].push(child.height);
    });
  });

  itemsHeightList02.map((item,i) => {
    maxHeightList[i] = Math.max(...item);
  });

  [...items].map((item,i) => {
    [...item.children].map((child,j) => {
      child.style.height = maxHeightList[j] + 'px';
    });
  });
  }
}

