  prevBtn.addEventListener('click',function (event) {
      if(nextBtn.classList.contains('mainimg-show-block')){
          nextBtn.classList.remove('mainimg-show-block');
      nextBtn.classList.remove('mainimg-show-block-add');
          flag = false;
      swipeNextFlag = true;
      swipePrevFlag = false;
      }
